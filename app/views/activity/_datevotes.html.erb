
<div class="container">
  <h2>Vote Date!</h2>

  <form id="dateform" >
    <%= label_tag :date, "Date:" %>
  <%= date_field_tag :date %>
    <%= hidden_field_tag :id, @activity.id %>
  <%= submit_tag "Add", class: "btn btn-primary vote" %>
  </form>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <% @activity.date_entries.each do |date| %>
        <th><%= date.date.strftime("%a %d.%m.") %> </th>
        <% end %>
      </tr>
    </thead>
    <tbody>

        <% @activity.users.each do |user| %>
        <tr>
        <td><%= user.username %></td>

        <% for i in 1..@activity.date_entries.length %>
        <td>
          <div class="checkbox">
            <label><input type="checkbox" value=""></label>
          </div>
        </td>
        <% end %>

        </tr>
        <% end %>


    </tbody>
  </table>

</div>
