        <div class="modal fade" tabindex="-1" role="dialog" id="homepagemodal">
          <div class="modal-dialog ">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Welcome To Alyop</h4>
              </div>
              <div class="Intro"> </div>
              <div class="modal-body">
                <div class="signupform">

                  <ul class="tab-group">
                    <li class="tab active"><a href="#signup" class="signupa">Sign Up</a></li>
                    <li class="tab"><a href="#login" class="signupa">Log In</a></li>
                  </ul>

                  <div class="tab-content">
                    <div id="signup">
                      <div class="field-wrap">
                        <span class="fb-login"><%= link_to image_tag("facebook-login.png"), "/auth/facebook"%></span>
                      </div>
                      <div class="or"></div>
                      <h1 class="signupheading">Or Sign Up for Free</h1>

                      <form action='/users' method="post">

                        <div class="field-wrap">
                          <label class="signuplabel">
                            Username<span class="req">*</span>
                          </label>
                          <input name="user[username]" class="signupinput" type="text"required autocomplete="off"/>
                        </div>

                        <div class="field-wrap">
                          <label class="signuplabel">
                            Email Address<span class="req">*</span>
                          </label>
                          <input name="user[email]" class="signupinput" type="email"required autocomplete="off"/>
                        </div>

                      <div class="field-wrap">
                        <label class="signuplabel">
                          Set Password<span class="req">*</span>
                        </label>
                        <input name="user[password]" class="signupinput" type="password"required autocomplete="off"/>
                      </div>

                      <div class="field-wrap">
                        <label class="signuplabel">
                          Confirm Password<span class="req">*</span>
                        </label>
                        <input name="user[password_confirmation]" class="signupinput" type="password"required autocomplete="off"/>
                      </div>
                      <input  type="hidden" name="authenticity_token" placeholder="<%= form_authenticity_token %>">

                      <button type="submit" class="buttonsignup button-block"/>Get Started</button>

                      </form>

                    </div>

                    <div id="login">
                      <h1 class="signupheading">Welcome Back!</h1>

                      <div class="field-wrap">
                        <span class="fb-login"><%= link_to image_tag("facebook-login.png"), "/auth/facebook"%></span>
                      </div>
                      <div class="or"></div>

                      <h1 class="signupheading">Or Use Your Email</h1>

                      <form action="/login" method="post">

                        <div class="field-wrap">
                        <label class="signuplabel">
                          Email Address<span class="req">*</span>
                        </label>
                        <input name="user[email]" class="signupinput" type="email"required autocomplete="off"/>
                      </div>

                      <div class="field-wrap">
                        <label class="signuplabel">
                          Password<span class="req">*</span>
                        </label>
                        <input name="user[password]" class="signupinput" type="password"required autocomplete="off"/>
                      </div>

                      <input  type="hidden" name="authenticity_token" placeholder="<%= form_authenticity_token %>">


                      <button type="submit" class="buttonsignup button-block"/>Log In</button>

                      </form>

                    </div>

                  </div><!-- tab-content -->

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
