<div class="signupform">

  <ul class="tab-group">
    <li class="tab active"><a href="#signup" class="signupa">Sign Up</a></li>
    <li class="tab"><a href="#login" class="signupa">Log In</a></li>
  </ul>

  <div class="tab-content">
    <div id="signup">
      <div class="field-wrap">
        <span class="fb-login"><%= link_to image_tag("facebook-login.png"), '#'%></span>
      </div>
      <div class="or"></div>
      <h1 class="signupheading">Or Sign Up for Free</h1>

      <form action="/" method="post">

        <div class="field-wrap">
          <label class="signuplabel">
            Username<span class="req">*</span>
          </label>
          <input class="signupinput" type="email"required autocomplete="off"/>
        </div>

        <div class="field-wrap">
          <label class="signuplabel">
            Email Address<span class="req">*</span>
          </label>
          <input class="signupinput" type="email"required autocomplete="off"/>
        </div>

      <div class="field-wrap">
        <label class="signuplabel">
          Set Password<span class="req">*</span>
        </label>
        <input class="signupinput" type="email"required autocomplete="off"/>
      </div>

      <div class="field-wrap">
        <label class="signuplabel">
          Confirm Password<span class="req">*</span>
        </label>
        <input class="signupinput" type="password"required autocomplete="off"/>
      </div>

      <button type="submit" class="button button-block"/>Get Started</button>

      </form>

    </div>

    <div id="login">
      <h1 class="signupheading">Welcome Back!</h1>

      <div class="field-wrap">
        <span class="fb-login"><%= link_to image_tag("facebook-login.png"), '#'%></span>
      </div>
      <div class="or"></div>

      <h1 class="signupheading">Or Use Your Email</h1>

      <form action="/" method="post">

        <div class="field-wrap">
        <label class="signuplabel">
          Email Address<span class="req">*</span>
        </label>
        <input class="signupinput" type="email"required autocomplete="off"/>
      </div>

      <div class="field-wrap">
        <label class="signuplabel">
          Password<span class="req">*</span>
        </label>
        <input class="signupinput" type="password"required autocomplete="off"/>
      </div>

      <p class="forgot"><a href="#" class="signupa">Forgot Password?</a></p>

      <button class="button button-block"/>Log In</button>

      </form>

    </div>

  </div><!-- tab-content -->
